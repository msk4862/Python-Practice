    "def inverted_triangle(n):\n",
    "\n",
    "    for i in range(n):\n",
    "        nSpaces = i\n",
    "        nStars = 2*(n-i-1)+1\n",
    "        print(' '*nSpaces + '*'*nStars)\n",
    "        "
   ]
